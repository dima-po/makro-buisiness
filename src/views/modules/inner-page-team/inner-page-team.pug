          article.makro-team__card
            figure.makro-team__card-person-photo
              img(src="images/team-member.jpg", width="400", height="400" alt="Роман Сайфулин")
            h3.makro-team__card-person-name John Doe
            p.makro-team__card-person-position Маркетинг

          - var n = 0;
          while n < 5
            - ++n
            article.makro-team__card
              figure.makro-team__card-person-photo
                img(src="images/team-member.jpg", width="400", height="400" alt="Роман Сайфулин")
              h3.makro-team__card-person-name John Doe
              p.makro-team__card-person-position Маркетинг

      section.makro-team__sidebar
        .makro-team__sidebar-overlay

        .makro-team__sidebar-body
          .makro-team__sidebar-controls
